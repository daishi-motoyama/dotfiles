[include]
  path = ./.gitconfig.local
[push]
  autoSetupRemote = true
  followTags = true
  default = current
[init]
  defaultBranch = main
[core]
  editor = nvim
  pager = delta --side-by-side
[interactive]
  diffFilter = delta --show-syntax-themes --light --color-only
[delta]
  navigate = true
  line-numbers = true
  hyperlinks = true
  true-color = always
[merge]
  conflictstyle = zdiff3
